<nav class="navbar header navbar-expand-lg">
  <div class="container-fluid">
    <button class="bg-light navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <form id="hospitalSearchForm" class="d-flex search gap-3" role="search">
          <select name="MUNICIPIO" class="form-select form-select-lg mb-3" id="city" aria-label="Escolha a cidade">
            <option value="">Escolha a Cidade</option>
            {{#each dataHospital}}
                <option value="{{this._id}}">{{this.MUNICIPIO}} - {{this.NOME_ESTABELECIMENTO}}</option>
            {{/each}}
          </select>
        <button id="searchButton" class="btn btn-outline-light" type="button">Search</button>
  </form>

    </div>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2/dist/js/select2.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2/dist/css/select2.min.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        $('#city').select2({
            placeholder: 'Escolha o hospital',
            allowClear: true,
            minimumInputLength: 1,
            language: {
                noResults: function () {
                    return "Nenhum hospital encontrado";
                }
            }
        });

        // Ao clicar no botão, redireciona para a rota do hospital
        $('#searchButton').click(function () {
            var hospitalId = $('#city').val(); // Obtém o ID selecionado
            if (hospitalId) {
                window.location.href = "/hospital/" + hospitalId; // Redireciona para a rota
            } else {
                alert("Por favor, selecione um hospital.");
            }
        });
    });
</script>
